template(name='role_edit')
    .ui.padded.stackable.centered.grid
        .centered.row
            .three.wide.column
                #delete.ui.basic.button
                    i.trash.icon
                    | Delete
            .ten.wide.column
                h1.ui.center.aligned.grey.header Edit role ##{jan_role_id}
            .three.wide.column
                +save_button
        .five.wide.column
            .ui.form
                +edit_text_field key='role_name' label='role Name' icon='code'
        
        
template(name='role_view')
    .ui.padded.stackable.centered.grid
        .centered.row
            .three.wide.column
                +link_button link='/roles' icon='left chevron' label='roles'
            .ten.wide.column
                h1.ui.center.aligned.grey.header role ##{jan_role_id}
            .three.wide.column
                +edit_button
        .row
            .five.wide.column
                +associated_users
                +associated_incidents
                +comments
                // +jsonView(json=location_ob)
            .five.wide.column
                +call_phone_button
                .ui.large.relaxed.list
                    +list_item key='jan_role_id' label='Jan Pro role ID' icon='building'
                    +list_item key='role_name' label='role Name' icon='code'
                    with geocode
                        +list_item key='formatted_address' label='role Address' icon='compass'
                    +list_item key='phone_number' label='Phone Number' icon='phone'
                    +list_item key='email_address' label='Email Address' icon='envelope'
                    +list_item key='level_1_user_ud' label='Level 1 User Id' icon='user'
                    +list_item key='level_2_user_ud' label='Level 2 User Id' icon='user'
                    +list_item key='level_3_user_ud' label='Level 3 User Id' icon='user'
                
                
