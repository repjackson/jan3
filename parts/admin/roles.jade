template(name='roles')
    .ui.stackable.padded.grid
        .row 
            .three.wide.column
            .ten.wide.column
                h1.ui.center.aligned.header 
                    +icon name='theatre-mask'
                    | Roles
            .three.wide.column
                +add_button type='role'
        .row 
            .four.wide.column
            .twelve.wide.column
                |Create/edit/assign user roles
                .ui.centered.stackable.cards
                    each roles
                        +role_card

