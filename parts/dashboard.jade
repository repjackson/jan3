template(name='dashboard')
    .ui.padded.stackable.grid
        .row
            .four.wide.column
                .ui.dividing.header
                    i.info.icon
                    |General Account Info
                with person
                    +person_card
            .eight.wide.column
                .ui.dividing.header
                    i.clipboard.icon
                    |Incidents
                .ui.divided.link.items    
                    each incidents
                        a.item(href="/view/#{_id}")
                            .ui.tiny.rounded.image
                                img(src="{{c.url image_id  height=100 width=100 crop='crop' gravity='face' }}")
                                +doc_sentiment
                            .content
                                .header ##{incident_number}
                                    +incident_type_label
                                .meta #{when}
                                .description #{incident_details}
                                .extra
                                    if customer
                                        .ui.label 
                                            i.user.icon
                                            |#{customer.first_name} #{customer.last_name}
                                    if office
                                        .ui.label 
                                            i.building.icon
                                            |#{office.office_name}
            .four.wide.column
                .ui.dividing.header
                    i.building.icon
                    | Local Office Information
                with office
                    +office_card
        .row
            .five.wide.column
                .ui.disabled.segment
                    .ui.header
                        i.building.icon
                        | Home Office Permissions
            .five.wide.column
                .ui.disabled.segment
                    .ui.header 
                        i.dollar.icon
                        |Billing and Payment History
            .five.wide.column
                .ui.disabled.segment
                    .ui.header
                        i.clock.icon
                        |Scheduled Services


    
