template(name='user_nav')
    with person
        .ui.menu
            .item
                i.info.icon
                | About
            .item
                | Docs
            .item
                | Social


template(name='view_profile')
    with person
        .ui.padded.stackable.grid
            .four.wide.column
                .header.item #{profile.first_name} #{profile.last_name}
                img.ui.avatar.image.item(src="{{c.url profile.image_id width=100 height=100 gravity='face' crop='fill'}}")
    
                if tags
                    each tags
                        .ui.basic.label #{this}
                .ui.list
                    .item
                        if profile.position
                            strong Position 
                            | #{profile.position}
                    .item
                        if profile.phone
                            strong Phone
                            | #{profile.phone}
                    .item    
                        if profile.company
                            strong Company
                            | #{profile.company}
                    .item    
                        if profile.website
                            strong Website 
                            a(href=profile.website target='_blank') #{profile.website}
                .ui.horizontal.divider.header 
                    i.building.icon
                    |Local Office
                if can_edit_profile
                    .ui.hidden.divider
                        a.ui.large.button(href="/account/profile/edit/#{_id}")
                            i.edit.icon
                            | Edit Profile
            .ten.wide.column