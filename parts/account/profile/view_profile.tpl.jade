with person
    .ui.container.grid
        .five.wide.column
            img.ui.centered.image(src="{{c.url profile.image_id width=400 height=400 gravity='face' crop='fill'}}")
            if can_edit_profile
                .ui.hidden.divider
                    a.ui.basic.fluid.button(href="/account/profile/edit/#{_id}") Edit Profile
        .ten.wide.column
            h2.ui.header
                |#{profile.first_name} #{profile.last_name}
            if tags
                each tags
                    .ui.basic.label #{this}
            if profile.position
                .ui.header Position 
                | #{profile.position}
            if profile.phone
                .ui.header Phone
                | #{profile.phone}
            if profile.company
                .ui.header Company
                | #{profile.company}
            if profile.website
                .ui.header Website 
                a(href=profile.website target='_blank') #{profile.website}
            .ui.horizontal.divider.header 
                i.building.icon
                |Local Office
