template(name='accounts_nav')
    #nav.ui.five.item.borderless.borderless.menu
        a.item(href='/' isActivePath='/')
            img.ui.avatar.image(src="{{c.url 'green_jp_icon' effect='make_transparent:10'}}")
            | &nbsp; Home
        +menu_item link='/login' label='Login' icon='password'
        +menu_item link='/reset_password' label='Forgot Password' icon='forgot-password'
        +menu_item link='/register_customer' label='Register Customer' icon='add-user-female'
        +menu_item link='/register_officer' label='Register Officer' icon='add-user-male'


template(name='accounts_layout')
    .context.example
        .ui.bottom.attached.basic.segment.pushable
            +left_sidebar
            .pusher
                #main_area
                    +accounts_nav
                    +Template.dynamic template=main



template(name='menu_item')
    a.item(href=link isActivePath=link)
        // img.ui.tiny.compact.inline.image(src='https://jan-pro.com/wp-content/themes/underboot/img/jan-pro-white.svg')
        +icon name=icon
        | &nbsp; #{label}


template(name='reset_password')
    .ui.middle.aligned.centered.padded.grid
        .eight.wide.column
            h1.ui.center.aligned.header 
                +icon name='forgot-password'
                | Reset Password
            .ui.disabled.segment
                .ui.form
                    .field
                        label Username/Email
                        input.username(type='text')
                    .field
                        label Password
                        input.password(type='password')
                    .field
                        .login.ui.fluid.disabled.button
                            // +icon name='lock-2'
                            | Email Reset Link


template(name='login')
    .ui.middle.aligned.centered.padded.grid
        .row
            .ten.wide.column
                // img.ui.large.center.aligned.image(src="{{c.url 'white_logo' gravity='face' crop='fill'}}")
                h1.ui.center.aligned.header 
                    // +icon name='password'
                    img.ui.spaced.image(src="{{c.url 'green_jp_icon' effect='make_transparent:10'}}")
                    | Jan-Pro Customer Portal Login
                .ui.segment
                    .ui.large.form
                        .field
                            label Username/Email
                            input.username(type='text')
                        .field
                            label Password
                            input.password(type='password')
                        if can_submit
                            .field
                                .login.ui.fluid.large.green.button
                                    // +icon name='checkmark' classes='ui inline image'
                                    | Login
                .ui.horizontal.divider or login as
                .ui.three.column.grid
                    .column
                        #login_demo_admin.ui.fluid.large.button
                            +icon name='crown' classes='ui inline image'
                            |Demo Admin
                    .column
                        #login_demo_officer.ui.fluid.large.button
                            +icon name='coach' classes='ui inline image'
                            |Demo Officer
                    .column
                        #login_demo_customer.ui.fluid.large.button
                            +icon name='online-support' classes='ui inline image'
                            |Demo Customer
                
                
template(name='register_officer')
    .ui.middle.aligned.centered.padded.grid
        .row
            h1.ui.center.aligned.header 
                +icon name='add-user-male'
                |Register Officer
        .row
            .eight.wide.column
                .ui.segment
                    .ui.form
                        .required.field
                            label Username
                            input(type='text')
                        .required.field
                            label Email
                            input(type='email')
                        .required.field
                            label Password
                            input(type='text')
                        .required.field
                            label Repeat Password
                            input(type='text')
            .four.wide.column
                .ui.header lookup office

                
template(name='register_customer')
    .ui.middle.aligned.centered.padded.grid
        .row
            h1.ui.center.aligned.header 
                +icon name='customer-support'
                |Register Customer
        .row
            .eight.wide.column
                .ui.segment
                    .ui.form
                        .required.field
                            label Username
                            input.username(type='text')
                            if username_found
                                .ui.info.message 
                                    |Existing Username Found
                                    a.ui.button.login_link(href='/login') 
                                        |Login Here
                                        i.right.arrow.icon
                        .required.field
                            label Email
                            input.email(type='email')
                            if email_found
                                .ui.info.message 
                                    |Existing Email Found
                                    a.ui.button.login_link(href='/login') 
                                        |Login Here
                                        i.right.arrow.icon
                            else
                                .ui.success.message 
                                    |Existing Available
                        .required.field
                            label Customer ID
                            input(type='text')
                        +single_doc_view type='customer' key='customer_jpid' label='Customer' icon='customer-support'
                        .required.field
                            label Password
                            input.password_one(type='password')
                        .required.field
                            label Repeat Password
                            input.password_two(type='password')
                            if passwords_match
                                i.green.checkmark.icon
                                |Passwords Match
                            else
                                i.red.remove.icon
                                |Passwords Don't Match
                            
                    .ui.fluid.button
                        if can_submit
                            |Register