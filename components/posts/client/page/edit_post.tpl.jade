with post
    .ui.container.basic.segment
        .ui.center.aligned.header Edit Post
        .ui.form
            .field
                label Title
                input#title(type='text' placeholder='Title' value=title)
            .field
                label Publish Date
                input#publish_date(type='date' value=publish_date)
            // .field
            //     label Description
            //     .froala-container
            //         +froalaReactive getFEContext
            +edit_description
            // .field
            //     textarea#body(rows='5') #{body}
            +edit_tags
            .field
                label Status
                if published
                    #unpublish.ui.green.button
                        |Published
                else
                    #publish.ui.basic.button
                        |Private
            .field
                if featured
                    #make_unfeatured.ui.basic.icon.button
                        i.toggle.on.icon
                else
                    #make_featured.ui.basic.icon.button
                        i.toggle.off.icon
                if featured
                    .ui.green.basic.label Featured
                else
                    .ui.basic.label Unfeatured
            if title
                #save_post.ui.green.button 
                    i.check.icon
                    |Save
            #delete_post.ui.red.icon.button
                i.trash.icon