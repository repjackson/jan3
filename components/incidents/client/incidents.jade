template(name='incidents')
    .ui.container
        .ui.stackable.divided.grid
            .twelve.wide.column
                .ui.relaxed.divided.items
                    each incidents
                        +incident_item
            .four.wide.column
                if isInRole 'admin'
                    h2.ui.header 
                        i.red.configure.icon
                        |Admin
                    #add_incident.ui.compact.basic.fluid.button
                        i.large.icons
                            i.sticky.note.outline.icon
                            i.green.plus.corner.icon
                        |Add Incident


template(name='my_incidents')
    .ui.fluid.card
        .content
            .ui.header My Docs
            .ui.divided.list
                each my_incidents
                    .item 
                        a(href="/incident/view/#{_id}") #{title}


template(name='incident')
    .ui.fluid.card
        .ui.centered.image
            a(href="/incident/view/#{_id}")
                img(src="{{c.url image_id  height=300 crop='fill' gravity='face' }}")
        .content
            h1.ui.header
                a(href="/incident/view/#{_id}") #{title}
            if publish_date
                .meta
                    | Published #{publish_when}
            .description
                |{{nl2br body}}
        .content
            each tags
                .ui.compact.button.incident_tag(class=tag_class) #{this}
            if isInRole 'admin'
                .edit_incident.ui.primary.basic.right.floated.button
                    i.pencil.icon
                    |Edit Incident    
            
            
template(name='incident_item')
    .ui.item
        a.image(href="/incident/view/#{_id}")
            img.ui.rounded.image(src="{{c.url image_id  width=175 height=175 crop='fill' gravity='face' }}")
        .content
            a.header(href="/incident/view/#{_id}") #{title}
            if publish_date
                .meta
                    | Published #{publish_when}
            .description
                |!{description}
                a(href="/incident/view/#{_id}") 
                    |View More
                    i.arrow.right.icon
            .extra
                i.tags.icon
                each tags
                    .ui.compact.label.incident_tag(class=tag_class) #{this}
            if isInRole 'admin'
                .extra
                    i.red.configure.large.icon
                    if published
                        .ui.green.basic.label Published
                    else
                        .ui.red.basic.label Unpublished                        
                    if featured
                        .ui.green.basic.label Featured
                    else
                        .ui.red.basic.label Unfeatured
