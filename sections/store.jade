template(name='product')
    .ui.comment
        .avatar
            img.ui.avatar.spaced.image(src="{{c.url author.profile.image_id width=100 height=100 gravity='face' crop='fill'}}")
        .content
            a.author #{author.username}
            .metadata
                span.date #{when}
            .text
                p.large130 #{text}
            .actions
                // a.reply Reply
                a.delete_comment
                    i.trash.icon
    

                

