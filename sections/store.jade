template(name='store')
    .ui.stackable.centered.padded.grid
        .centered.row
            .twelve.wide.column
                .ui.center.aligned.header
                    i.cart.icon
                    | Store (consumables)
        .centered.row
            .four.wide.column
                +timestamp_facet
            .twelve.wide.column
                .ui.comments
                    each store_messages
                        +store_message
                // .ui.fluid.icon.big.input
                //     i.plus.green.icon
