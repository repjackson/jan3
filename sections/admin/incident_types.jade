template(name='incident_types')
    .ui.stackable.padded.container.grid
        .row 
            .three.wide.column
            .ten.wide.column
                h1.ui.center.aligned.header 
                    i.exclamation.triangle.icon
                    | Incident Types
            .three.wide.column
                +add_button type='incident_type'
        .row 
            .ui.centered.stackable.cards
                each incident_types
                    +incident_type_card

template(name='incident_type_card')
    .ui.card
        .content
            a.grey.header(href="/view/#{_id}")
                |#{name} 
        .content
            |!{html}
        .content
            +edit_button
            +view_button
        
        
        
template(name='incident_type_edit')
    .ui.padded.stackable.centered.grid
        .centered.row
            .three.wide.column
                #delete.ui.icon.button
                    i.trash.icon
            .ten.wide.column
                h1.ui.center.aligned.grey.header Edit Incident Type #{name}
            .three.wide.column
                +save_button
        .eight.wide.column
            .ui.form
                +edit_text_field key='name' label='Incident Type Name'
                +edit_html
        
        
template(name='incident_type_view')
    .ui.padded.stackable.centered.grid
        .centered.row
            .three.wide.column
                +link_button link='/incident_types' icon='exclamation triangle'
            .ten.wide.column
                h1.ui.center.aligned.grey.header Incident Types: #{name}
            .three.wide.column
                +edit_button
        .row
            .eight.wide.column
                .ui.header Name: #{name}
                .ui.header Description: !{html}
                +associated_incidents
                +comments
                
                
