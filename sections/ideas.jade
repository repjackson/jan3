template(name='ideas')
    .ui.stackable.padded.container.grid
        .row 
            .three.wide.column
            .ten.wide.column
                h1.ui.center.aligned.header 
                    i.lightbulb.icon
                    | Ideas
            .three.wide.column
                +add_button type='idea'
        .row 
            .ui.centered.stackable.cards
                each ideas
                    +idea_card

template(name='idea_card')
    .ui.card
        .content
            a.grey.header(href="/view/#{_id}")
                |#{name} 
        .content
            |!{html}
        .content
            +edit_button
            +view_button
        
        
        
template(name='idea_edit')
    .ui.padded.stackable.centered.grid
        .centered.row
            .three.wide.column
                #delete.ui.icon.button
                    i.trash.icon
            .ten.wide.column
                h1.ui.center.aligned.grey.header Edit Idea #{name}
            .three.wide.column
                +save_button
        .eight.wide.column
            .ui.form
                +edit_text_field key='name' label='Idea Name'
                +edit_html
        
        
template(name='idea_view')
    .ui.padded.stackable.centered.grid
        .centered.row
            .three.wide.column
                +link_button link='/ideas' icon='exclamation triangle'
            .ten.wide.column
                h1.ui.center.aligned.grey.header Ideas: #{name}
            .three.wide.column
                +edit_button
        .row
            .eight.wide.column
                .ui.header Name: #{name}
                .ui.header Description: !{html}
                +associated_incidents
                +comments
                
                
