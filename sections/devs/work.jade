template(name='work')
    .ui.stackable.centered.padded.grid
        .centered.row
            .four.wide.column
                h2.ui.header Work Log
                .ui.sub.header #{work.count} Hours Logged
                +add_button type='work'
                // +set_session_button key='view_complete' value=true label='complete'
                // +set_session_button key='view_complete' value=false label='incomplete'
                +tag_facet
            .twelve.wide.column
                .ui.cards
                    each work
                        +work_card
                
template(name='work_card')
    .ui.fluid.card
        .content
            |!{html}
        .content
            each tags
                .ui.label #{this}
        .content
            .ui.sub.header {{reg_format time_start}}
            // .ui.sub.header {{reg_format time_end}}
            .right.floated 
                // |#{when}
                +author_info
                |logged #{when}
            // each timestamp_tags
            //     .ui.label #{this}
            if comment_count
                | #{comment_count}
                i.comments.icon
            +edit_button
            +view_button


template(name='work_view')
    .ui.padded.stackable.centered.grid
        .middle.aligned.row
            .three.wide.center.aligned.column
                +link_button link='/work' icon='clock' label='work'
            .ten.wide.center.aligned.column
                h1.ui.center.aligned.grey.header View Work
            .three.wide.center.aligned.column
                +edit_button
        .row
            .four.wide.column
                .ui.header {{reg_format time_start}}
                // .ui.header End
                // |#{time_end}
                .ui.header Tags
                each tags
                    .ui.large.basic.label #{this}
            .twelve.wide.column
                .ui.header #{title}
                |!{html}
                +comments
            
        
template(name='work_edit')
    .ui.padded.stackable.centered.grid
        .centered.middle.aligned.row
            .three.wide.center.aligned.column
                +save_button
            .ten.wide.center.aligned.column
                h1.ui.center.aligned.grey.header Edit Work Itme
            .three.wide.center.aligned.column
                #delete.ui.icon.button
                    i.trash.icon
        .centered.row
            .four.wide.column
                +edit_timerange_field
                +edit_array_field key='tags' label='Tags'
            .twelve.wide.column
                +edit_html
                // +edit_date_field key='start' label='start' icon='clock'
            
        
            