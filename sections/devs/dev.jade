template(name='dev')
    h1.ui.center.aligned.grey.header 
        i.code.icon
        | Development
    // #call_ev.ui.button call ev
    .ui.centered.cards
        +task_widget
        +widget_list type='schema' label='Schemas'
        +widget_list type='hour' label='Dev Log'
        // +widget_list type='project' label='Projects'
        +widget_list type='trigger' label='Triggers' icon='bolt'
        +widget_list type='action' label='Actions' 
    .ui.hidden.divider
    
template(name='widget_list')
    .ui.card
        .content
            a.header(href="/#{type}s")
                if icon
                    i.icon(class=icon)
                |#{label}
            .ui.list
                each type_docs
                    a.item(href="/view/#{_id}") #{name} #{title} !{html}
    
    
    
template(name='dev_nav')    
    .ui.top.attached.eight.item.inverted.grey.menu
        a.item(href='/dev' class="{{isActivePath '/dev'}}" data-position="bottom center" data-content='Dev')
            i.code.icon
            // .mobile.hidden Tasks
        a.item(href='/tasks' class="{{isActivePath '/tasks'}}" data-position="bottom center" data-content='Tasks')
            i.tasks.icon
