template(name='roles')
    .ui.stackable.padded.grid
        .row 
            .three.wide.column
            .ten.wide.column
                h1.ui.center.aligned.header 
                    i.users.icon
                    | Roles
            .three.wide.column
                +add_button type='role'
        .row 
            .ui.centered.stackable.cards
                each roles
                    +role_card

template(name='role_card')
    .ui.card
        .content
            a.grey.header(href="/view/#{_id}")
                |#{name} 
        .content
            |!{html}
        .content
            +edit_button
            +view_button
        
        
        
template(name='role_edit')
    .ui.padded.stackable.centered.grid
        .centered.row
            .three.wide.column
                #delete.ui.icon.button
                    i.trash.icon
            .ten.wide.column
                h1.ui.center.aligned.grey.header Edit Role #{name}
            .three.wide.column
                +save_button
        .eight.wide.column
            .ui.form
                +edit_text_field key='name' label='Role Name'
                +edit_html
        
        
template(name='role_view')
    .ui.padded.stackable.centered.grid
        .centered.row
            .three.wide.column
                +link_button link='/roles' icon='chevron-left' label='Roles'
            .ten.wide.column
                h1.ui.center.aligned.grey.header Role: #{name}
            .three.wide.column
                +edit_button
        .row
            .eight.wide.column
                .ui.header Name: #{name}
                .ui.header Description: !{html}
                +associated_users
                +comments
                
                
template(name='role_selector')
    each user_roles
        .toggle_role.ui.button #{name}            