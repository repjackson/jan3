template(name='feature_view')
    .ui.padded.stackable.centered.grid
        .centered.row
            .three.wide.column
                +link_button link='/front' icon='globe' label='features'
            .ten.wide.column
                h1.ui.center.aligned.grey.header view #{title}
            .three.wide.column
                +edit_button
        .row
            .three.wide.column
                .ui.header tags
                each tags
                    .ui.label #{this}
            .thirteen.wide.column
                .ui.header title: #{title}
                .ui.header text: #{text}
                .ui.header icon: #{icon}
                .ui.header link: #{link}
                +comments
            
        
template(name='feature_edit')
    .ui.padded.stackable.centered.grid
        .centered.row
            .three.wide.column
                +save_button
            .ten.wide.column
                h1.ui.center.aligned.grey.header edit #{title} feature
            .three.wide.column
                #delete.ui.icon.button
                    i.trash.icon
        .centered.row
            .twelve.wide.column
                +edit_text_field key='title' label='title'
                +edit_text_field key='icon' label='icon'
                +edit_text_field key='text' label='text'
                +edit_text_field key='link' label='link'
            .four.wide.column
                +edit_array_field key='tags'
        
            