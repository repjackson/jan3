template(name='front')
    #home.ui.vertical.masthead.center.aligned.padded.segment
        .ui.hidden.divider
        .ui.container
            img.ui.medium.centered.image(src='https://jan-pro.com/wp-content/themes/underboot/img/jan-pro-white.svg')
            h2.ui.inverted.header
                | Customer Portal
            // h2 Do whatever you want when you want to.
            a.ui.huge.primary.button(href='/sign-up')
                | Get Started 
                i.right.arrow.icon
    .ui.vertical.padded.segment
        .ui.middle.aligned.stackable.padded.relaxed.grid
            .row
                .fifteen.wide.column
                    h2.ui.center.aligned.header Features
                    +tag_facet
            .row
                each features
                    .five.wide.column
                        a.ui.basic.padded.segment(href=link)
                            h2.ui.header
                                i.icon(class=icon)
                                .content
                                    | #{title}
                                    .sub.header #{text}
                            if is_admin
                                +edit_button
            .row
                if is_admin
                    +add_button type='feature'    
