template(name='field_edit')
    if can_edit
        +Template.dynamic template=edit_template

template(name='boolean_edit')
    .ui.button.toggle_field(class=bool_switch_class title=key)
        if icon
            i.icon
                +icon name=icon
        |#{title}

template(name='array_edit')
    .ui.fluid.labeled.right.icon.input
        .ui.basic.label
            if icon
                +icon name=icon classes='inline spaced'
            |#{title}
        input.add_array_element(type='text' placholder='add')
        i.plus.icon
    if value
        each value
            .ui.large.basic.label
                i.pull_element.remove.link.icon
                |#{this}




template(name='multiref_edit')
    .ui.basic.label
        if icon
            +icon name=icon classes='inline spaced'
        |#{title}
    each choices
        .ui.button.toggle_element(class=element_class)
            if icon
                i.icon
                    +icon name=icon
            |#{title}



