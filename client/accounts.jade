template(name='reset_password')
    .ui.middle.aligned.centered.padded.grid
        .ten.wide.column
            h1.ui.center.aligned.header
                +icon name='forgot-password'
                | Reset Password
            .ui.basic.segment
                .ui.very.relaxed.two.column.grid
                    .column
                        .ui.form
                            .field
                                // label Username
                                input#username(type='text')
                            .field
                                #reset_password_by_username.ui.fluid.inverted.jpgreen.button
                                    .large120 by Username
                    .column
                        .ui.form
                            .field
                                // label Email
                                input#email(type='email')
                            .field
                                #reset_password_by_email.ui.fluid.inverted.jpgreen.button
                                    .large120 by Email
                .ui.vertical.divider
                    |or

template(name='login')
    .ui.stackable.padded.grid
        .centered.row
            .eight.wide.column
                img.ui.medium.image(src="{{c.url 'jan_full_logo'}}")
        .centered.row
            .eight.wide.column
                h1.ui.center.aligned.header
                    // img.ui.spaced.image(src="{{c.url 'green_jp_icon' effect='make_transparent:10'}}")
                    | Login
                .ui.basic.segment
                    .ui.labeled.fluid.input
                        .ui.label Username
                        input.username(type='text')
                    .ui.hidden.divider
                    .ui.labeled.fluid.input
                        .ui.label Password
                        input.password(type='password')
                    .ui.hidden.divider
                    .field
                        // unless currentUser
                        .login.ui.fluid.jpgreen.inverted.big.icon.button(class=login_button_class)
                            +icon name='play'
            .four.wide.column
                .ui.center.aligned.header Demo
                #login_demo_customer.ui.fluid.margined.large.button(class=demo_class)
                    +icon name='headset'
                    | Customer

                #login_demo_office.ui.fluid.margined.large.button(class=demo_class)
                    +icon name='building'
                    | Office
                #login_demo_admin.ui.fluid.margined.large.button(class=demo_class)
                    +icon name='user-shield'
                    | Admin



template(name='register_customer')
    .ui.centered.padded.grid
        .row
            h1.ui.center.aligned.header
                +icon name='add-user-male'
                |Register Customer
        .row
            .four.wide.column
                if account_selected
                    .ui.centered.cards
                        .ui.green.card
                            with customer_doc
                                .content
                                    // .ui.header
                                    //     |Customer
                                    .ui.medium.header #{customer_name}
                                    .ui.list
                                        .item ##{jpid}
                                        .item #{customer_contact_person}
                                        .item #{customer_contact_email}
                                        .item #{phone}
                                        .item #{address}
                                        .item #{address2}
                                        .item #{city} #{state}
            .eight.wide.basic.column
                .ui.form
                    .field
                        label Customer JPID
                        input#customer_jpid(type='number' min='0' value=session_customer_jpid)
                        // if jpid_lookup_status
                        //     |#{jpid_lookup_status}
                            // .ui.card
                            //     with office_doc
                            //         .content
                            //             .ui.header
                            //                 |Office
                            //             h4.ui.header #{ev.MASTER_LICENSEE}
                            //             div #{ev.ADDR_STREET} #{ev.ADDR_STREET_2}
                            //             div #{ev.ADDR_CITY} #{ev.ADDR_STATE}
                            //             div #{ev.ADDR_POSTAL_CODE} #{ev.MASTER_COUNTRY}
                            //             div #{ev.TELEPHONE}

                    if account_selected
                        .field
                            label Username
                            input#username(type='text' name="username")
                            if username_found
                                .ui.info.message
                                    |Existing Username Found
                                    a.ui.button.login_link(href='/login')
                                        |Login Here
                                        i.right.arrow.icon
                        .field
                            label Password
                            input#password(type='password' name="password")
                        .field
                            label Email
                            input#email(type='email')
                            if email_found
                                .ui.info.message
                                    |Existing Email Found
                                    a.ui.button.login_link(href='/login')
                                        |Login Here
                                        i.right.arrow.icon
                            else
                                .ui.success.message
                                    |Email Available
                    // .field
