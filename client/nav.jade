template(name='nav')
    .nav_bar.ui.top.attached.borderless.inverted.menu
        a.toggle_left_sidebar.icon.item
            i.bars.icon
        if is_admin
            each admin_nav_items
                a.item(href="/p/#{slug}" class="{{ active_route slug }}" title=title)
                    // i.large.icon
                    //     +icon name=icon
                    .mobile.hidden &nbsp; #{title}
        else if is_customer
            each customer_nav_items
                a.item(href="/p/#{slug}" class="{{ active_route slug }}" title=title)
                    i.large.icon
                        +icon name=icon
                    .mobile.hidden &nbsp; #{title}
        else if is_office
            each office_nav_items
                a.item(href="/p/#{slug}/#{my_office.ev.ID}" class="{{ active_route slug }}" title=title)
                    .mobile.hidden &nbsp; #{title}
        .right.menu
            if is_dev
                if editing_mode
                    #toggle_editing.icon.active.item
                        i.teal.pencil.link.bordered.icon
                else
                    #toggle_editing.icon.item
                        i.pencil.link.bordered.icon
                a.icon.item(href='/p/schemas' data-content='Schemas' class="{{ active_route 'schemas' }}" )
                    i.database.icon
            if currentUser
                a.icon.item(href='/p/messages' data-content='Messages' class="{{ active_route 'messages' }}" )
                    i.envelope.icon
                a.item(href="/user/#{currentUser.username}" data-content='View Profile' class="{{ active_route 'user_view'}}")
                    if currentUser.profile.image_id
                        i.large.icon
                            img.ui.image(src="{{c.url currentUser.profile.image_id width=50 height=50 gravity='face' crop='fill'}}")
                    else
                        i.user.icon
                    .mobile.hidden &nbsp; #{currentUser.username}
                a#logout.ui.icon.item(href='#')
                    if signing_out
                        i.notched.circle.loading.icon
                    else
                        i.sign.out.alternate.icon
            else
                a.item(href='/login')
                    i.large.icon
                        +icon name='internal'
                    // i.sign.in.alternate.icon
                    | &nbsp; Log In



