template(name='nav')
    .ui.fixed.inverted.jpblue.big.menu
        a.delta.icon.item(href='#' class=header_class)
            .mobile.hidden
                img.ui.tiny.image(src='https://jan-pro.com/wp-content/themes/underboot/img/jan-pro-white.svg')
            .mobile.only
                i.database.icon
        a.icon.item.tasks(href='#')
            i.tasks.large.icon
