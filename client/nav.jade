template(name='nav')
    .ui.inverted.blue.top.attached.borderless.menu
        a.toggle_left_sidebar.icon.item 
            i.bars.icon
        if is_admin
            each admin_nav_items
                a.item(href="/p/#{slug}" class="{{ active_route slug }}" title=title)
                    i.large.icon
                        +icon name=icon
                    .mobile.hidden &nbsp; #{title}
        else if is_customer
            each customer_nav_items
                a.item(href="/p/#{slug}" class="{{ active_route slug }}" title=title)
                    i.large.icon
                        +icon name=icon
                    .mobile.hidden &nbsp; #{title}
        else if is_office
            // with currentUser.users_customer.parent_franchisee.parent_office
            each office_nav_items
                a.item(href="/p/#{slug}/#{my_office.ev.ID}" class="{{ active_route slug }}" title=title)
                    i.large.icon
                        +icon name=icon
                    .mobile.hidden &nbsp; #{title}
        .right.menu
            if is_dev
                a.item(href='/p/admin' data-content='Admin' class="{{ active_route 'admin' }}" )
                    i.large.icon
                        +icon name='user-shield'
                #toggle_editing.item
                    i.large.icon
                        if editing_mode
                            +icon name='toggle-on'
                        else
                            +icon name='toggle-off'
                a.item(href='/p/schemas' data-content='Schemas' class="{{ active_route 'schemas' }}" )
                    i.large.icon
                        +icon name='database'
            if is_customer
                a.log_ticket.item(href='#' data-content='Log Incident')
                    i.large.icon
                        +icon name='plus'
            if currentUser
                a.item(href="/user/#{currentUser.username}" data-content='View Profile' class="{{ active_route 'user_view'}}")
                    if currentUser.profile.image_id
                        i.large.icon
                            img.ui.image(src="{{c.url currentUser.profile.image_id width=50 height=50 gravity='face' crop='fill'}}")
                    else
                        i.user.icon
                    .mobile.hidden &nbsp; #{currentUser.username}
                a#logout.ui.item(href='#') 
                    i.large.icon
                        +icon name='logout-rounded'
            else
                a.item(href='/login')
                    i.large.icon
                        +icon name='internal'
                    // i.sign.in.alternate.icon
                    | &nbsp; Log In



