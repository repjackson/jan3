template(name='cc')
    .ui.equal.width.padded.grid.lightblue.cc
        .column.menu_segment
            .ui.inverted.blue80.segment.view_profile.pointer
                .ui.icon.header
                    if currentUser.image_id
                        img.ui.avatar.image(src="{{c.url currentUser.image_id width=100 height=100 gravity='face' crop='fill'}}")
                    else
                        i.user.icon
                    | #{currentUser.first_name} #{currentUser.last_name}
                | @#{currentUser.username}
        .column.menu_segment.todos
            .ui.inverted.blue80.segment.work.pointer
                .ui.small.header
                    i.tasks.icon
                    | Agenda
        .column.menu_segment
            .ui.inverted.blue80.segment.settings.pointer
                .ui.small.header
                    i.setting.icon
                    | Settings
                .item Password
                .item Email
                .item Username
        .column.menu_segment
            .ui.inverted.blue80.segment.sla.pointer
                .ui.small.header
                    i.clock.outline.icon
                    | SLA Settings
        if is_eric
            .column.menu_segment
                .ui.inverted.blue80.segment
                    .ui.small.header Role Switcher
                    +role_switcher
        .column.menu_segment
            .ui.inverted.blue80.segment.delete_delta(title='If no data results.')
                i.trash.icon
                |Clear Session
        // .column.menu_segment
        //     a.ui.inverted.lightblue.segment(title='Invert Colors' href='#')
        //         +icon name='lightbulb'
        //         | Night Mode
        // a.item.run_fo(title='Reload Session' href='#')
        //     +icon name='refresh'
        //     |Reset
        if is_dev
            .column.menu_segment
                a.ui.inverted.blue80.segment.profile.pointer.show_delta(href='#')
                    | Print Delta
                    i.code.icon
        .column.menu_segment
            .ui.inverted.blue80.segment
                +quick_idea
        .column.menu_segment
            a#logout.ui.inverted.blue80.segment.profile.pointer(href='#')
                if signing_out
                    // +icon name='spinner' classes='fa-pulse'
                    i.spinner.loading.icon
                else
                    i.sign.out.icon
                strong &nbsp; Log Out



