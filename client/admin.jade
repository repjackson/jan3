template(name='admin_widget')
    .ui.card
        .content
            a.ui.center.aligned.icon.header(href=link)
                i.icon(class=icon)
                .content
                    |#{label}
            .ui.list
                each children
                    a.item(href="/view/#{_id}") #{name} #{title} !{html}




template(name='bugs')
    .ui.padded.stackable.centered.grid
        .centered.row
            .three.wide.column
                +link_button link='/admin' icon='user-shield' label='Admin'
            .ten.wide.column
                h1.ui.center.aligned.grey.header 
                    +icon name='bug'
                    | Bugs
            .three.wide.column
                +add_button type='bug'
        .row 
            .ui.sixteen.wide.column
                .ui.centered.stackable.cards
                    each bugs
                        +bug_card

template(name='bug_card')
    .ui.card
        .content
            |#{body}
        .content
            +edit_button
            +view_button
        
        
        
template(name='bug_edit')
    .ui.padded.stackable.centered.grid
        .centered.row
            .three.wide.column
                #delete_bug.ui.icon.button
                    i.trash.icon
            .ten.wide.column
                h1.ui.center.aligned.grey.header Edit bug #{name}
            .three.wide.column
                +save_button
        .eight.wide.column
            .ui.form
                +edit_text_field key='name' label='bug Name'
                +edit_number_field key='number' label='Number'
                +edit_textarea name='description' label='Description' icon='details'
        
        
template(name='bug_view')
    .ui.padded.stackable.centered.grid
        .centered.row
            .three.wide.column
                +link_button link='/bugs' icon='bugs' label='bugs'
            .ten.wide.column
                h1.ui.center.aligned.grey.header View '#{name}' Bug 
            .three.wide.column
                +edit_button
        .row
            .eight.wide.column
                .ui.header Name: #{name}
                .ui.header Number: #{number}
                .ui.header Description: !{description}
                +associated_users
                +comments
                
                