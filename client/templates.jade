                        +Template.dynamic template=sub_sub_nav
                        +Template.dynamic template=main
        +footer
        // +jsonView json=doc


template(name='not_found')
    .ui.text.container
        .ui.center.aligned.header Not Found


template(name='sidebar')
    .ui.left.inline.vertical.sidebar.inverted.fixed.large.menu
        a.header.toggle_sidebar.item(href='/' class="{{isActivePath '/'}}") 
            i.home.icon
            |JanPro
        a.item(href='/people' class="{{isActivePath '/people'}}")
            i.large.users.icon
            | Users
        a.item(href='/incidents' class="{{isActivePath '/incidents'}}")
            i.large.clipboard.icon
            | Incidents
        a.item(href='/offices' class="{{isActivePath '/offices'}}")
            i.large.building.icon
            | Offices
        a.item(href='/services' class="{{isActivePath '/services'}}")
            i.large.shipping.fast.icon
            | Services
        .ui.divider
        if currentUser
            // a.icon.item(href='/dashboard' class="{{isActivePath '/dashboard'}}")
            //     i.line.chart.icon
            // .ui.simple.dropdown.icon.item
            //     i.alarm.icon
            //     .menu
            //         each notifications
            //             .item #{text}
            // a.icon.item(href='/messages' class="{{isActivePath '/messages'}}")
            //     i.mail.icon
            // if isInRole 'admin'
            a.icon.toggle_sidebar.item(href='/admin/tasks' class="{{isActivePath '/admin/tasks'}}")
                i.configure.icon
                |Admin
            a.toggle_sidebar.item(href="/account/profile/edit/#{currentUser._id}" class="{{isActivePath '/account/profile/edit/#{currentUser._id}'}}")
                if currentUser.profile.image_id
                    img.ui.avatar.image(src="{{c.url currentUser.profile.image_id width=50 height=50 gravity='face' crop='fill'}}")
                else
                    i.user.icon
                if currentUser.name
                    | #{currentUser.name}
                else
                    | Profile
            a#logout.ui.toggle_sidebar.item(href='#') 
                i.sign.out.icon
                | Sign Out
        else
            a.ui.toggle_sidebar.item(href='/sign-in') 
                i.sign.in.icon
                | Sign In


