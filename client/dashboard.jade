template(name='dashboard')
    #dash_header.ui.vertical.masthead.center.aligned.segment
        .ui.container
            img.ui.medium.centered.image(src='https://jan-pro.com/wp-content/themes/underboot/img/jan-pro-white.svg')
            h2.ui.inverted.header Customer Portal
            unless currentUser
                a.ui.center.aligned.big.inverted.blue.button(href='/login')
                    |Login to see Dashboard
                    i.right.arrow.icon
            +customer_menu
    +customer_special_services

template(name='dashboard_office_messages')
    .ui.stackable.grid
        .row
            .twelve.wide.column
                .ui.three.stackable.cards
                    each office_messages
                        .card
                            .content
                                +icon name=icon classes='ui right floated inline'
                                .header
                                    |#{currentUser.users_office.ev.MASTER_LICENSEE} #{title}
                                p
                                p #{details}
            .four.wide.column
                +dashboard_service_list


template(name='dashboard_service_list')
    .ui.secondary.segment
        h4.ui.dividing.header
            |Other JAN-PRO Services Offered
        .ui.bulleted.list
            each services_offered
                a.service_popup.item
                    // img.ui.avatar.image(src="{{c.url image_id height=400 crop='scale'}}")
                    |#{title}
                .ui.popup
                    .header #{title}
                    .request_service.ui.compact.button
                        i.icon
                            +iconsmall name='service-bell'
                        | Request
