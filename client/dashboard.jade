template(name='customer_menu')
    .ui.four.item.stackable.menu
        a.item(href='/account/settings')
            i.large.icon
                +icon name='settings'
            | &nbsp; Account
        a.log_ticket.item(href='#')
            i.large.icon
                +icon name='add-ticket'
            | &nbsp; Log Ticket
        a.item(href='/p/customer_tickets')
            i.large.icon
                +icon name='two-tickets'
            | &nbsp; Tickets
        a.item(href='/p/customer_services')
            i.large.icon
                +icon name='service-bell'
            | &nbsp; Request Service
