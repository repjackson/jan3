                    .ui.header Franchisee Name: #{ev.FRANCHISEE}
                    .ui.header JPID ##{ev.ID}
                    .ui.header Email: #{ev.FRANCH_EMAIL}
                    .ui.header Short Name: #{ev.FRANCH_NAME}
                    .ui.header Cell: #{ev.TELE_CELL}
                    .ui.header Master Licensee: #{ev.MASTER_LICENSEE}
                +related_customers

