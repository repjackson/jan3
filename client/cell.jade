template(name='cell_boolean')
    if is_true
        #turn_off.ui.primary.compact.icon.button
            i.checkmark.icon
    else
        #turn_on.ui.compact.icon.button
            i.circle.outline.icon



template(name='cell_text_edit')
    if editing_cell
        .ui.fluid.icon.input
            input.cell_val(type='text' value=cell_value )
            i.save_field.link.checkmark.icon
    else
        |#{cell_value}
        &nbsp;
        if editing_mode
            i.edit_field.link.small.pencil.icon



template(name='cell_number')
    .ui.fluid.input
        input#cell_number(type='number' min='0' value=cell_value)




template(name='cell_date')
    .ui.icon.fluid.input
        input#date_field(type='date' value=cell_value)


