    if doc
        with doc
            if is_editing
                .ui.labeled.fluid.input
                    .ui.basic.label select staff
                    input#staff(type='text' value=staff)
            else
                div(class=doc_classes)
                    |#{staff}
            // if isInRole 'admin'
            +session_edit_icon
    else
        // if isInRole 'admin'
        .ui.header no coc found
        .create_doc.ui.basic.button
            i.plus.icon
            |create html with #{template_tags}
    
    
    

