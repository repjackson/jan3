template(name='personality')
    .ui.styled.accordion
        .active.title
            |#{personality.length} personality 
            #call_personality.ui.icon.button 
                i.refresh.icon
        .active.content   
            .title
                |personality
                i.dropdown.icon
            .content
                each personality.personality
                    .ui.header
                        |#{name} {{ to_percent raw_score }}%
                    .ui.list
                        each children
                            .item #{name} {{ to_percent raw_score }}%
            .title 
                |needs
                i.dropdown.icon
            .content
                each personality.needs
                    .ui.list
                        .item #{name} {{ to_percent raw_score }}%
            .title 
                |values
                i.dropdown.icon
            .content
                each personality.values
                    .ui.list
                        .item #{name} {{ to_percent raw_score }}%
            .title 
                |behaviors
                i.dropdown.icon
            .content
                each personality.behaviors
                    .ui.list
                        .item #{name} {{ to_percent raw_score }}%

            +jsonView(json=personality)



