template(name='doc_sentiment') 
    // .ui.dividing.header 
    //     |sentiment
    .ui.small.progress(data-percent=sentiment_score_percent class=sentiment_bar_class)
        .bar
        .progress
        .label
            |{{ to_percent doc_sentiment_score }}%
            if is_positive
                | positive
            else
                | negative

