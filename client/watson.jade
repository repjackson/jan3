        .ui.yellow.small.progress(data-percent=disgust_percent)
            .bar
            .progress
            .label {{to_percent disgust}}% disgust 
        .ui.red.small.progress(data-percent="{{to_percent anger}}")
            .bar
            .progress
            .label {{to_percent anger}}% anger 
            
