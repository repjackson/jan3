if after_image_id
    .field
        label after Image
        .ui.large.image
            img(src="{{c.url after_image_id }}")
            a#remove_photo.ui.top.left.attached.link.basic.label Remove
            .ui.bottom.right.attached.basic.label Image Id: #{after_image_id}
else
    .fields
        .field
            label Upload after Image
            input(type='file' name='upload_picture' accept='image/*')
