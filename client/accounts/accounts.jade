template(name='accounts_nav')
    #nav.ui.five.item.menu
        +menu_item link='/login' label='Login' icon='password'
        +menu_item link='/reset_password' label='Forgot Password' icon='forgot-password'
        +menu_item link='/register_customer' label='Register Customer' icon='add-user-female'
        +menu_item link='/register_officer' label='Register Officer' icon='add-user-male'


template(name='menu_item')
    a.item(href=link)
        // img.ui.tiny.compact.inline.image(src='https://jan-pro.com/wp-content/themes/underboot/img/jan-pro-white.svg')
        +icon name=icon
        | &nbsp; #{label}


template(name='reset_password')
    .ui.middle.aligned.centered.padded.grid
        .eight.wide.column
            h1.ui.center.aligned.header 
                +icon name='forgot-password'
                | Reset Password
            .ui.disabled.segment
                .ui.form
                    .field
                        label Username/Email
                        input.username(type='text')
                    .field
                        label Password
                        input.password(type='password')
                    .field
                        .login.ui.fluid.disabled.button
                            // +icon name='lock-2'
                            | Email Reset Link


template(name='login')
    .ui.middle.aligned.centered.padded.grid
        .eight.wide.column
            h1.ui.center.aligned.header 
                +icon name='password'
                |Login
            .ui.segment
                .ui.form
                    .field
                        label Username/Email
                        input.username(type='text')
                    .field
                        label Password
                        input.password(type='password')
                    .field
                        .login.ui.fluid.button
                            // +icon name='lock-2'
                            | Login

                
                
template(name='register_officer')
    .ui.middle.aligned.centered.padded.grid
        .eight.wide.column
            h1.ui.center.aligned.header 
                +icon name='add-user-male'
                |Register Officer
            .ui.segment
                .ui.form
                    .required.field
                        label Username
                        input(type='text')
                    .required.field
                        label Email
                        input(type='email')
                    .required.field
                        label Password
                        input(type='text')
                    .required.field
                        label Repeat Password
                        input(type='text')
        .four.wide.column
            .ui.header lookup office

                
