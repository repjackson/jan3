template(name='event_types')
    .ui.padded.stackable.centered.grid
        .centered.row
            .three.wide.column
                if is_admin
                    +link_button link='/admin' icon='user-shield' label='Admin'
            .ten.wide.column
                h1.ui.center.aligned.grey.header 
                    +icon name='hashtag-activity-feed'
                    | Event Types
            .three.wide.right.aligned.column
                +add_button type='event_type'
        .row 
            .four.wide.column
                +tag_facet
                |Total
                +view_stat doc_type='event_type' stat_type='total'
            .twelve.wide.column
                .ui.centered.stackable.four.cards
                    each event_types
                        +event_type_card

template(name='event_type_card')
    .card
        .content
            a.grey.header(href="/view/#{_id}")
                +icon name=icon
                |#{title} 
        .content
            |!{description}
            h5 #{slug}
            each tags
                .ui.label #{this}
        .content
            +edit_button
            +view_button
        
        
        
template(name='event_type_edit')
    .ui.padded.stackable.centered.grid
        .centered.row
            .three.wide.center.aligned.column
                #delete.ui.icon.button
                    i.trash.icon
            .ten.wide.column
                h1.ui.center.aligned.grey.header Edit Event Type '#{title}'
            .three.wide.center.aligned.column
                +save_button
        .eight.wide.column
            .ui.form
                +edit_text_field key='title' label='title'
                +edit_text_field key='slug' label='slug'
                +edit_text_field key='icon' label='icon'
                if icon
                    +icon name=icon
                +edit_array_field key='tags' label='tags'
                +edit_textarea name='description' label='Description' icon='details'
        
        
template(name='event_type_view')
    .ui.padded.stackable.centered.grid
        .centered.row
            .three.wide.center.aligned.column
                +link_button link='/event_types' icon='type' label='Event Types'
            .ten.wide.column
                h1.ui.center.aligned.grey.header Event Type '#{title}'
            .three.wide.center.aligned.column
                +edit_button
        .row
            .eight.wide.column
                .ui.header title: #{title}
                .ui.header slug: #{slug}
                .ui.header icon: #{icon}
                +icon name=icon
                each tags
                    .ui.label #{this}
                .ui.header description: #{description}
                
                