                        //         .item 
                        //             |#{this}
                        //             strong #{value}

template(name='facet')
    .ui.header #{key}
    each filters
        .unselect.ui.blue.button #{this}
    
    each res
        .ui.select.margined.button(class=toggle_value_class)
            strong #{name}
            small #{count}