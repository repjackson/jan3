head
    title JAN-PRO
    meta(name='viewport', content='user-scalable=no, initial-scale=1.0, maximum-scale=1.0, width=device-width')
    meta(name='apple-mobile-web-app-capable', content='yes')
    meta(name='apple-mobile-web-app-status-bar-style', content='black')

body
    +home


template(name='home')
    .ui.stackable.padded.grid
        .centered.row
            .four.wide.center.aligned.column
            .eight.wide.column
                img.ui.small.centered.image.delta.pointer(src='https://jan-pro.com/wp-content/themes/underboot/img/jan-pro-blue.svg')
            .four.wide.column
        #main
            unless delta
                if currentUser
                    .create_delta.ui.margined.large.button(title='Create Session')
                        i.plus.icon
                        | Session
            if delta
                .ui.stackable.two.column.padded.grid
                    .row
                        .column
                            each facets
                                .ui.inline_header.header 
                                    if icon
                                        i.icon(class=icon)
                                    |#{key}
                                each selected_values
                                    .unselect.ui.blue.button #{this}
                                each values
                                    .ui.select.button(class=toggle_value_class)
                                        strong #{name}
                                        // small #{count}
                        .column
                            each delta.result_ids
                                .ui.segment
                                    .ui.list
                                        each local_doc.keys
                                            .item 
                                                |#{this}
                                                strong #{value}