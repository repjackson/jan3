template(name='feedback_responses')
    .ui.stackable.padded.grid
        .middle.aligned.row 
            .three.wide.center.aligned.column
            .ten.wide.column
                h1.ui.center.aligned.header 
                    i.clone.icon
                    | Feedback Reponses
            .three.wide.center.aligned.column
                +add_button type='feedback_response'
        .row 
            .sixteen.wide.column
                .ui.centered.stackable.cards
                    each feedback_responses
                        +feedback_response_card

template(name='feedback_response_card')
    .card
        .content
            a.grey.header(href="/view/#{_id}")
                |#{name} 
        .content
            |!{html}
            +edit_button
            +view_button
        
        
        
template(name='feedback_response_edit')
    .ui.padded.stackable.middle.aligned.centered.grid
        .centered.row
            .three.wide.center.aligned.column
                #delete.ui.icon.button
                    i.trash.icon
            .ten.wide.column
                h1.ui.center.aligned.grey.header Edit Feedback Response
            .three.wide.center.aligned.column
                +save_button
        .eight.wide.column
            .ui.form
                +vote_button
                +edit_text_field key='text' label='Text'
                // +edit_html
        
        
template(name='feedback_response_view')
    .ui.padded.stackable.middle.aligned.centered.grid
        .centered.middle.aligned.row
            .three.wide.center.aligned.column
                a.ui.button(href="/view/#{parent_id}")
                    i.up.chevron.icon
                    |Incident
                if is_dev
                    +link_button link='/feedback_responses' icon='reply'
            .ten.wide.column
                h1.ui.center.aligned.grey.header View Feedback Response
            .three.wide.center.aligned.column
                +edit_button
        .row
            .four.wide.column
                .ui.header Text: #{text}