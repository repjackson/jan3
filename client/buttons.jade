template(name='session_edit_button')
    if currentUser
        unless is_editing
            .edit_this.ui.blue.small.button(title="Edit #{tags}" class=button_classes)
                i.pencil.icon
                |Edit
        else
            .save_doc.ui.green.button(class=button_classes)
                i.check.icon
                |Save


template(name='session_edit_icon')
    if currentUser
        unless is_editing
            i.blue.pencil.link.icon.edit_this(title=tags class=button_classes)
        else
            .save_doc.ui.basic.button(class=button_classes)
                i.green.check.icon
                |Save

template(name='toggle_boolean')
    .field
        if featured
            #make_unfeatured.ui.basic.icon.button
                i.toggle.on.icon
        else
            #make_featured.ui.basic.icon.button
                i.toggle.off.icon
        if featured
            .ui.green.basic.label Featured
        else
            .ui.basic.label Unfeatured

template(name='save_button')
    a.ui.fluid.basic.big.button(href="/view/#{_id}") 
        i.save.icon
        strong Save
template(name='edit_button')
    a.ui.fluid.basic.big.button(href="/edit/#{_id}") 
        i.edit.icon
        strong Edit

template(name='view_button')
    a.ui.button(href="/view/#{_id}") 
        |View
        i.chevron.right.icon
        
