template(name='footer')
    .ui.fluid.inverted.blue.segment.footer
        .ui.stackable.equal.height.centered.padded.grid
            .row
                .four.wide.inverted.column
                    unless currentUser
                        .ui.list
                            .sitemap_list.item Why Jan-Pro
                            .sitemap_list.item Commercial Cleaning
                            .sitemap_list.item About Us
                        .ui.list
                            .sitemap_list.item Contact Us
                            .sitemap_list.item Legal/ Privacy Policy
                            // .sitemap_list.item demo login: demo/password
                    // +role_switcher
                    .ui.hidden.divider
                    #report_bug.ui.icon.button(data-position="right center" data-tooltip="Report Bug")
                        i.bug.icon
                .four.wide.column
                    if is_customer
                        +my_customer_account_card
                .four.wide.column
                    if is_customer
                        +my_franchisee_card
                .four.wide.column
                    if is_customer
                        +my_office_card
                    if is_officer
                        +office_card office_jpid=currentUser.profile.office_jpid
            .centered.row
                .ui.center.aligned.inverted.grey.header
                    +icon name='copyright'
                    | 2018 Jan-Pro
        
        
    .ui.basic.small.report.modal
        h3.ui.center.aligned.header
            | Report Bug on #{bug_link}
        .content
            .ui.fluid.input
                input#bug_description(type='text')
        .actions
            .ui.cancel.icon.button
                i.remove.icon
            // if can_submit_bug
            .ui.green.ok.ok_button.large.icon.button
                i.checkmark.large.icon
        
        
template(name='role_switcher')
    .ui.inverted.header 
        +icon name='user-shield'
        |Role Switcher
    // h5.ui.inverted.header Switching reloads the page
    each role_docs
        .change_role.ui.button(class=role_button_class)
            |#{name}
