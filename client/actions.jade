template(name='complete_small')
    if block_parent.complete
        .ui.small.header
            +icon name='checkmark' classes='spaced mini'
            | Complete
    else
        .ui.small.header
            +icon name='clock' classes='spaced mini'
            | Incomplete

template(name='complete_big')
    if block_parent.complete
        +icon name='checkmark' classes='spaced mini'
        | Complete
        if full_mode
            div
            .ui.compact.button.mark_incomplete
                +iconsmall name='clock'
                | Mark Incomplete
    else
        +icon name='clock' classes='spaced mini'
        | Incomplete
        if full_mode
            div
            .ui.compact.button.mark_complete
                +iconsmall name='checkmark'
                | Mark Complete





