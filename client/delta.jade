template(name='delta')
    .ui.stackable.padded.grid
        if currentUser
            .centered.row
                // .one.wide.blue.column
                //     .ui.inverted.header JP
                //     // img.ui.small.center.aligned.image.view_schamas(src="{{c.url 'green_jp_icon' effect='make_transparent:10'}}")
                .twelve.wide.blue.column
                    a.toggle_menu(href='#')
                        h1.ui.inverted.header
                            if current_type.icon
                                +icon name=current_type.icon classes='spaced'
                            | #{current_type.title}
                    if delta_doc.viewing_menu
                        .ui.hidden.divider
                        each bookmarks
                            a.ui.compact.button.pick_delta(title=title)
                                i.icon
                                    +icon name=icon
                                | #{title}
                .four.wide.blue.column
                    .ui.button
                        if currentUser.image_id
                            i.large.icon
                                img.ui.image(src="{{c.url currentUser.image_id width=50 height=50 gravity='face' crop='fill'}}")
                        else
                            i.user.icon
                        |#{currentUser.username}
                    +logout_button

        if currentUser
            unless delta_doc
                .row
                    .sixteen.wide.column
                        if currentUser
                            .create_delta.ui.button(title='Create Session')
                                i.green.plus.icon
                                | Session
            if delta_doc
                unless delta_doc.viewing_detail
                    .four.wide.column.scrolling
                        if current_type
                            if can_add
                                .ui.fluid.icon.compact.margined.button.add_doc(title="Add #{current_type.title}")
                                    // +icon name='plus'
                                    i.green.large.plus.icon
                                    // |#{current_type.title}

                        .ui.compact.icon.button.delete_delta(title='Clear Session')
                            i.remove.icon
                            // |Clear
                        .ui.compact.icon.button.run_fo(title='Reload Session')
                            i.refresh.icon
                            // |Reset
                        if is_dev
                            .ui.icon.compact.button.show_delta
                                i.code.icon
                        // .ui.vertical.segments
                        each delta_fields
                            .ui.hidden.divider
                            +facet
                +delta_results
        unless loggingIn
            unless currentUser
                +login



template(name='delta_results')
    .column(class=results_class)
        if is_dev
            unless delta_doc.viewing_detail
                +toggle_delta_config key='config_mode' title='Schema Configuration' label='Configure' icon='settings'
        // +toggle_delta_config key='view_full' title='View Full' icon='resize-diagonal' label='Expand Cards'
        if delta_doc.config_mode
            .scrolling
                .ui.header
                    +icon name='administrative-tools'
                    | Edit Schema '#{current_type.title}'
                .ui.accordion
                    .active.title
                        .ui.small.header
                            +icon name='rename'
                            |Fields
                    .active.content
                        .ui.button.add_field
                            i.plus.icon
                            | Field
                        each schema_fields
                            +delta_card data=_id
                .ui.hidden.divider
                .ui.accordion
                    .active.title
                        .ui.small.header
                            +icon name='action'
                            | Actions
                    .active.content
                        .ui.button.add_action
                            i.plus.icon
                            | Action
                        each schema_actions
                            +delta_card data=_id
        else
            if delta_doc.result_ids
                if delta_doc.result_ids.length
                    unless delta_doc.viewing_detail
                        .ui.horizontal.list
                            .item
                                +set_page_size value=10
                                +set_page_size value=20
                                +set_page_size value=50
                            .item
                                if multiple_pages
                                    .ui.basic.label
                                        | #{delta_doc.current_page}/#{delta_doc.page_amount}
                                | #{delta_doc.total} Results
                            .item
                                .ui.buttons
                                    if show_page_down
                                        a.ui.page_down.small.compact.icon.button(title='Previous Page')
                                            i.left.chevron.grey.icon
                                    if show_page_up
                                        a.ui.page_up.small.compact.icon.button(title='Next Page')
                                            i.right.chevron.grey.icon
                        .ui.hidden.divider
                    if is_calculating
                        .ui.hidden.divider
                        .ui.active.indeterminate.massive.centered.inline.loader
                    else
                        if delta_doc.viewing_detail
                            with delta_doc.detail_id
                                +delta_card
                        else
                            .scrolling.delta_cards
                                each delta_doc.result_ids
                                    +delta_card
                                    .ui.hidden.divider
            else
                |No results
