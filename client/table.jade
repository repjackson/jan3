template(name='table')
    // +query_input placeholder='Filter Office Name'
    table.ui.striped.selectable.fixed.table
        thead
            tr
                each fields
                    if sortable
                        th.sort_by
                            |#{label}
                            if sort_descending
                                i.sort.amount.down.icon
                            if sort_ascending
                                i.sort.amount.up.icon
                    else
                        th
                            |#{label}
        tbody
            each table_docs
                tr
                    each values
                        td #{this}
        +table_footer columns=fields.length                        
                                
template(name='table_footer')
    unless is_querying
        tfoot
            tr
                th(colspan=columns)
                    if pages
                        .ui.right.floated
                            |From #{skip_amount} to #{end_result} of #{count_amount}
                        .ui.right.floated.pagination.menu
                            each pages
                                a.set_page_number.item(class=pagination_item_class) #{number}
                    if show_10
                        |View &nbsp;
                        .set_10.ui.small.compact.button(class="{{page_size_button_class '10'}}") 10
                    if show_20
                        .set_20.ui.small.compact.button(class="{{page_size_button_class '20'}}") 20
                    if show_50
                        .set_50.ui.small.compact.button(class="{{page_size_button_class '50'}}") 50
                    if show_100
                        .set_100.ui.small.compact.button(class="{{page_size_button_class '100'}}") 100


